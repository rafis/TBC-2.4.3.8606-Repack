				PanelTemplates_SetNumTabs(AltoholicFrame, 5);
				PanelTemplates_SetTab(AltoholicFrame, 1);
			</OnLoad>
			<OnDragStart>
				this:StartMoving();
				this.isMoving = true;
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
				this.isMoving = false;
			</OnDragStop>
			<OnShow>
